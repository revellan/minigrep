# PRODUCTION MAKEFILE

minigrep:
	@cargo build --release

install: minigrep
	@if [ "$(shell whoami)" != "root" ]; then \
		echo "You must be root to install this package!"; \
		exit 1; \
	fi
	@install -Dm755 target/release/minigrep /usr/local/bin/minigrep
	@echo "Installed to /usr/local/bin/minigrep"

clean:
	@cargo clean

